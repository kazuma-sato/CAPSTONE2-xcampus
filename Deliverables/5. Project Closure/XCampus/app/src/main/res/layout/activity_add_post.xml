<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.capstone.xcampus.activities.AddPostActivity"
    android:background="@color/background_color">


    <TextView
        android:id="@+id/label_title"
        android:text="Create a Note or Classified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginLeft="30dp"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/label_contact_us_desc"
        android:layout_below="@+id/label_title"
        android:layout_marginLeft="25dp"
        android:textColor="#000"
        android:text="Please fill in all fields!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/input_school"
        android:layout_below="@+id/label_contact_us_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="School"
        android:padding="10dp"
        android:background="#FFF"
        android:textColor="#000"
        />




    <EditText
        android:id="@+id/input_program"
        android:layout_below="@+id/input_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Program"
        android:padding="10dp"
        android:background="#FFF"
        android:textColor="#000"
        />

    <EditText
        android:id="@+id/input_course"
        android:layout_below="@+id/input_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Course"
        android:padding="10dp"
        android:background="#FFF"
        android:textColor="#000"
        />


    <EditText
        android:id="@+id/input_title"
        android:layout_below="@+id/input_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Title"
        android:padding="10dp"
        android:background="#FFF"
        android:textColor="#000"
        />

    <EditText
        android:id="@+id/input_desc"
        android:layout_below="@+id/input_title"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Description"
        android:padding="10dp"
        android:background="#FFF"
        android:textColor="#000"
        />


    <LinearLayout
        android:id="@+id/fuleUploadWrap"
        android:layout_below="@id/input_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_file_upload"
            android:layout_below="@+id/input_desc"
            android:src="@drawable/file_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="75dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            android:text="Upload a file"/>

    </LinearLayout>


    <Button
        android:id="@+id/button_post"
        android:layout_below="@+id/fuleUploadWrap"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:text="Post Note"/>

</RelativeLayout>


</ScrollView>
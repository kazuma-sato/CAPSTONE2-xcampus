<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="75dp"
    android:paddingRight="75dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/logoColor"
    tools:context="com.app.capstone.xcampus.RegisterActivity">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/label_username"
        android:layout_below="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="Username"/>

    <EditText
        android:id="@+id/input_username"
        android:layout_below="@+id/label_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#000"
        android:background="#FFF"/>

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/label_email"
        android:layout_below="@+id/input_username"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"/>

    <EditText
        android:id="@+id/input_email"
        android:layout_below="@+id/label_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#000"
        android:background="#FFF"/>

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/label_password"
        android:layout_below="@+id/input_email"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"/>

    <EditText
        android:id="@+id/input_password"
        android:layout_below="@+id/label_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#000"
        android:padding="10dp"
        android:background="#FFF"/>

    <Button
        android:layout_marginTop="25dp"
        android:id="@+id/button_register"
        android:layout_below="@id/input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textColor="#FFF"
        android:background="@color/colorPrimary" />


    <TextView
        android:id="@+id/label_button_toLogin"
        android:layout_below="@+id/button_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="To Login ..."
        />



</RelativeLayout>
